{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "lib",
    "lib": [
      "dom",
      "es6",
      "es2015.core",
      "es2015.promise",
      "es2015.iterable",
      "scripthost",
      "esnext.asynciterable"
    ],
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*.ts",
    "./typings/**/*.d.ts"
  ],
  "exclude": [
    "./src/test",
    "./src/**/*.test.ts"
  ]
}
